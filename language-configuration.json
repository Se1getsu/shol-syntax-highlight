{
    "comments": {
        // `Ctrl+/` で追加される行コメント
        "lineComment": "//",
        // `Shift+Alt+A` で追加されるブロックコメント
        "blockComment": [ "/*", "*/" ]
    },
    // symbols used as brackets
    "brackets": [
        ["[", "]"],
        ["(", ")"]
    ],
    // symbols that are auto closed when typing
    "autoClosingPairs": [
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""]
    ],
    // symbols that can be used to surround a selection
    "surroundingPairs": [
        ["[", "]"],
        ["(", ")"],
        ["\"", "\""]
    ]
}